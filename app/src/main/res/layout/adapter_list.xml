<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/device_item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
    android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_border_gray_solid_white"
        android:padding="5dp">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:text="设备"/>
        <TextView
                android:id="@+id/device_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:padding="2dp"
                android:textColor="@color/colorGray"
                android:text="序列号"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_net"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/shape_net"
        android:layout_margin="5dp"
        android:textColor="@color/colorWhite"
        android:text="远程控制"/>
    <Button
        android:id="@+id/btn_local"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/shape_local"
        android:layout_margin="5dp"
        android:textColor="@color/colorWhite"
        android:text="局域网控制"/>
</LinearLayout>